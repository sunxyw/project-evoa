        "types": "./dist/types/src/components/*.d.ts"
      }
    },
    "./lib/*": {
      "import": {
        "default": "./dist/es/lib/*.js",
        "types": "./dist/types/src/lib/*.d.ts"
      },
      "require": {
        "default": "./dist/lib/lib/*.js",
        "types": "./dist/types/src/lib/*.d.ts"
      }
    },
    "./tailwind-preset": "./tailwind-preset.ts"
