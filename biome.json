{
  "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
  "vcs": {
    "enabled": true,
    "defaultBranch": "main",
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "noVoid": "warn"
      },
      "correctness": {
        "noConstantMathMinMaxClamp": "warn",
        "noNewSymbol": "error",
        "noUndeclaredVariables": "error",
        "noUnusedImports": "warn",
        "noUnusedPrivateClassMembers": "warn",
        "noUnusedVariables": "warn",
        "useArrayLiterals": "warn",
        "useHookAtTopLevel": "error"
      },
      "nursery": {},
      "performance": {
        "noBarrelFile": "warn",
        "noReExportAll": "warn"
      },
      "security": {},
      "style": {
        "noNamespace": "warn",
        "noNamespaceImport": "warn",
        "noShoutyConstants": "warn",
        "useBlockStatements": "warn",
        "useCollapsedElseIf": "warn",
        "useConsistentArrayType": "warn",
        "useFilenamingConvention": {
          "level": "warn",
          "options": {
            "requireAscii": true
          }
        },
        "useForOf": "warn",
        "useFragmentSyntax": "warn",
        "useNamingConvention": {
          "level": "warn",
          "options": {
            "conventions": [
              {
                "selector": {
                  "kind": "enumMember"
                },
                "formats": ["CONSTANT_CASE"]
              },
              {
                "selector": {
                  "kind": "objectLiteralProperty"
                },
                "formats": [
                  "camelCase",
                  "PascalCase",
                  "CONSTANT_CASE",
                  "snake_case"
                ]
              }
            ]
          }
        },
        "useShorthandArrayType": "warn",
        "useShorthandAssign": "warn",
        "useSingleCaseStatement": "warn"
      },
      "suspicious": {
        "noConsoleLog": "warn",
        "noEmptyBlockStatements": "warn"
      }
    }
  },
  "organizeImports": {
    "enabled": true
  },
  "files": {
    "ignoreUnknown": true,
    "ignore": [".vscode/**/*", "node_modules/**/*", "dist/**/*"]
  }
}
